{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noImplicitAny": false
    },
    "include": [
        "server"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}